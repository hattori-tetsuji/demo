<h1>商品の一覧</h1>

<table>
  <tr>
    <th class="image">画像</th>
    <th class="item_code">商品コード＆説明</th>
    <th class="method">編集</th>
  </tr>


<% @items.each do |item| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(item.picture_url, width: 150) if item.picture.present? %><!-- <%= item.picture %> -->
    </td>
    
    <td>
      <dl>
        <dt class="itemname"><%= item.name %></dt>
        <dd><%= item.description %></dd>
      </dl>
    </td>
    
    <td>
      <%= link_to '[表示]', item %><br />
      <%= link_to '[修正]', edit_item_path(item) %><br />
      <%= link_to '[削除]', item, method: :delete, data: { confirm: '本当によろしいですか？' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

